
<%- include('./partials/header') %>
<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>

        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta</label>
            <textarea placeholder="Digite a sua resposta aqui" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <hr>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="cad-body">
                    <p><%= resposta.corpo %></p><hr>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('./partials/footer') %>